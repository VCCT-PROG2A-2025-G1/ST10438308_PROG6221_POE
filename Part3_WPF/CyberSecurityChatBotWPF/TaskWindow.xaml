<Window x:Class="CyberSecurityChatBotWPF.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Cyber Tasks" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Task Title"/>
            <TextBox x:Name="TitleBox" Margin="0,0,0,5"/>

            <TextBlock Text="Task Description"/>
            <TextBox x:Name="DescriptionBox" Margin="0,0,0,5"/>

            <TextBlock Text="Reminder Date (Optional)"/>
            <DatePicker x:Name="ReminderPicker" Margin="0,0,0,5"/>

            <Button Content="Add Task" Click="AddTask_Click"/>
        </StackPanel>

        <!-- Task List -->
        <ListBox x:Name="TaskList" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="✅ Mark Complete" Margin="5" Click="MarkComplete_Click"/>
            <Button Content="🗑 Delete Task" Margin="5" Click="DeleteTask_Click"/>
            <Button Content="🔔 Check Reminders" Margin="5" Click="CheckReminders_Click"/>
        </StackPanel>
    </Grid>
</Window>