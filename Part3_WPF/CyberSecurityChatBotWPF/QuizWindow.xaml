<Window x:Class="CyberSecurityChatBotWPF.QuizWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="QuestionTextBlock" Text="Question goes here" FontSize="18" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <StackPanel x:Name="AnswersPanel" Margin="0,0,0,20">
                <!-- Answer RadioButtons added dynamically in code-behind -->
            </StackPanel>

            <Button x:Name="NextButton" Content="Next" Width="100" HorizontalAlignment="Left" Click="NextButton_Click"/>

            <TextBlock x:Name="FeedbackTextBlock" Text="" FontWeight="Bold" Foreground="Green" Margin="0,20,0,0" />

            <TextBlock x:Name="ScoreTextBlock" Text="Score: 0/0" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
