<Window x:Class="CyberSecurityChatBotWPF.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberSecurity Chatbot" Height="600" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <TextBlock x:Name="ChatHistoryTextBlock" TextWrapping="Wrap" FontSize="14" />
        </ScrollViewer>

        <!-- User Input Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="UserInputTextBox" Width="500" Height="30" Margin="0,0,10,0" />
            <Button Content="Send" Width="75" Click="SendButton_Click"/>
        </StackPanel>

        <!-- Buttons to open Task Manager and Quiz -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Open Task Manager" Width="150" Height="30" Click="OpenTaskManager_Click" Margin="0,0,10,0"/>
            <Button Content="Play Cybersecurity Quiz" Width="150" Height="30" Click="OpenQuiz_Click"/>
        </StackPanel>
    </Grid>
</Window>